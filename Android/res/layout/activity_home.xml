<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_bg"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/home_hospital_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/hospital_menu_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/home_clinic_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/clinic_menu_icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/home_bloodbank_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/blood_menu_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/home_medicalshop_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/medical_menu_icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#2c3e50"
        android:orientation="vertical"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Bookings Today"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#f5f5f5"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_bookings_wraper"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#262626"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingLeft="30dp"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/home_booking_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/tmp_menu_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/home_booking_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Mago Hospital"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f5f5f5"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="10 - 11 AM"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/home_booking_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Dr.Prasanth"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_show_bookings"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="30dp"
             >

            <TextView
                android:id="@+id/home_bookings_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 More"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#2c3e50"
               
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>